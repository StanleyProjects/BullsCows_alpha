<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="GoldButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/gold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowMinWidthMajor">75%</item>-->
        <!--<item name="android:windowMinWidthMinor">75%</item>-->
    </style>

    <style name="KeyboardTextKey">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/primary_black_ripple</item>
    </style>

    <style name="CountSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:secondaryProgress">@color/red</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>