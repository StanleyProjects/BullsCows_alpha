<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="24dp"
              android:paddingRight="24dp">
    <LinearLayout
        android:id="@+id/number_element_container_123"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/number_element_1"
            android:theme="@style/PrimaryButton"
            android:textColor="@color/black"
            android:text="1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/number_element_2"
            android:theme="@style/PrimaryButton"
            android:textColor="@color/black"
            android:text="2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/number_element_3"
            android:theme="@style/PrimaryButton"
            android:textColor="@color/black"
            android:text="3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_element_container_456"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/number_element_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textColor="@color/black"
            android:theme="@style/PrimaryButton"/>

        <Button
            android:id="@+id/number_element_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@color/black"
            android:theme="@style/PrimaryButton"/>

        <Button
            android:id="@+id/number_element_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textColor="@color/black"
            android:theme="@style/PrimaryButton"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_element_container_789"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/number_element_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textColor="@color/black"
            android:theme="@style/PrimaryButton"/>

        <Button
            android:id="@+id/number_element_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textColor="@color/black"
            android:theme="@style/PrimaryButton"/>

        <Button
            android:id="@+id/number_element_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textColor="@color/black"
            android:theme="@style/PrimaryButton"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_element_container_0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0px"/>
        <Button
            android:id="@+id/number_element_0"
            android:theme="@style/PrimaryButton"
            android:textColor="@color/black"
            android:text="0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0px"/>
    </LinearLayout>
</LinearLayout>