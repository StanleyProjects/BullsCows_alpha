<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:gravity="center"
        android:text="@string/add_offer_dialog_label"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="6dp">

        <TextView
            android:id="@+id/offer_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="123456ABCDEF"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <ImageView
            android:id="@+id/refresh"
            android:background="@drawable/black_ripple"
            android:src="@drawable/ic_sync_white_24dp"
            android:tint="@color/colorPrimary"
            android:scaleType="center"
            android:layout_width="48dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!--<include layout="@layout/keyboard_buttons"/>-->
    <include layout="@layout/keyboard_texts"/>

    <TextView
        android:id="@+id/add_offer"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:layout_gravity="right"
        android:gravity="center"
        android:background="@drawable/white_ripple"
        android:layout_width="96dp"
        android:layout_height="48dp"/>

    <!--<View-->
        <!--android:background="@color/colorPrimary"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2dp"/>-->
</LinearLayout>